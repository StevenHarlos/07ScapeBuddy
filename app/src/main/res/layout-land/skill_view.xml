<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#cbb28e">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/skill_name"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/icon_view"
        android:layout_toEndOf="@+id/icon_view"
        android:layout_alignBottom="@+id/icon_view"
        android:layout_alignParentBottom="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/skill_level"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_alignBottom="@+id/skill_name"
        android:layout_toRightOf="@+id/skill_name"
        android:layout_toEndOf="@+id/skill_name" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/skill_rank"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_alignBottom="@+id/skill_level"
        android:layout_toLeftOf="@+id/skill_exp"
        android:layout_toStartOf="@+id/skill_exp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/skill_exp"
        android:paddingLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/skill_rank"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>