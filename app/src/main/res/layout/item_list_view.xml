<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#cbb28e">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/item_icon_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Medium Text"
        android:id="@+id/trend_textview"
        android:layout_below="@+id/price_textview"
        android:layout_alignRight="@+id/price_textview"
        android:layout_alignEnd="@+id/price_textview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Medium Text"
        android:id="@+id/price_textview"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@android:style/TextAppearance.Medium" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:text="Medium Text"
        android:id="@+id/description_textview"
        style="@android:style/TextAppearance.Small"
        android:layout_below="@+id/price_textview"
        android:layout_toRightOf="@+id/item_icon_view"
        android:layout_toEndOf="@+id/item_icon_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Medium Text"
        android:id="@+id/name_textview"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_icon_view"
        android:layout_toEndOf="@+id/item_icon_view"
        android:textStyle="bold"
        style="@android:style/TextAppearance.Medium" />
</RelativeLayout>